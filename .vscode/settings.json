// Place your settings in this file to overwrite default and user settings.
{
  // Disable vscode from running prettier on save
  // ESLint now handles formatting our code with prettier integration
  "[javascript]": {
    "editor.formatOnSave": false
  },
  // Enable/disable default JavaScript formatter (For Prettier)
  "javascript.format.enable": false,
  "eslint.alwaysShowStatus": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/public": true,
    "**/.cache": true
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#f58f00",
    "activityBar.activeBackground": "#f58f00",
    "activityBar.activeBorder": "#9fffd7",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#9fffd7",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#c27100",
    "titleBar.inactiveBackground": "#c2710099",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#c27100",
    "statusBarItem.hoverBackground": "#f58f00",
    "statusBar.foreground": "#e7e7e7"
  },
  "peacock.color": "#c27100",
  // Allows ESLint to run when we save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.eol": "\n",
}
